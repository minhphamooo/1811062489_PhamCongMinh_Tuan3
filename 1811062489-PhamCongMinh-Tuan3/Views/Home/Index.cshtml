@model IEnumerable<_1811062489_PhamCongMinh_Tuan3.Models.Course>
@{
    ViewBag.Title = "Home Page";
}
<link href="~/Content/Style.css" rel="stylesheet" />
<div class="course" style="list-style: none; position: relative; margin-bottom: 30px; ">
    <ul>
        @foreach(var course in Model)
            {
                <li>
                   <div class="date" style=" text-align: center; background-color: #d41d50; color: white; width: 60px; border-radius: 8px;">
                       <div class="month">
                           @course.DateTime.ToString("MM")
                       </div>
                       <div class="day">
                           @course.DateTime.ToString("dd")
                       </div>
                   </div>
                    <div class="details">
                        <span class="lecturer">
                            @course.Lecturer.Name
                        </span>
                        <span class="category">
                            @course.Category.Name
                        </span>
                        <button data-coures-id="@course.Id" class="btn btn-default btn-sm js-toggle-attendance">Going ?</button>
                    </div>
                </li>
            }
    </ul>
    @section scripts
    {
        <script>
            $(document).ready(function () {
                $(".js-toggle-attendance").click(function (e) {
                    var button = $(e.targer);
                    $.post("/api/attendances", { courseId: button.attr("data-course-id") })
                        .done(function () {
                            button
                                .removeClass("btn-default")
                                .addClass("btn-info")
                                .text("Going");
                        })
                        .fail(function () {
                            alert("Something failed!");
                        });
                });
            });
        </script>
        }
</div>